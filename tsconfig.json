{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "lib": [
            "ES2018"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "outDir": ".build",
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES2018",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,        
    },
}